<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="zopyx.existdb">
<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

      <h2 i18n:translate="">Connector logfile</h2>
      <tal:def define="rows context/logger"> 

          <div class="warning" i18n:translate="" tal:condition="not: rows">
              No logger entries found
          </div>

          <table class="listing" id="logging" tal:condition="rows">
              <thead>
                  <tr>
                      <th i18n:translate="">Date</th>
                      <th i18n:translate="">Level</th>
                      <th i18n:translate="">Username</th>
                      <th i18n:translate="">Comment</th>
                  </tr>
              </thead>
              <tbody>
                  <tr tal:repeat="row python: reversed(rows)">
                      <td tal:content="python: toLocalizedTime(row['date'], True)" />
                      <td tal:attributes="class string:level-${row/level}" tal:content="row/level" />
                      <td tal:content="row/username" />
                      <td>
                          <span tal:content="row/comment" />
                          <a class="action"
                              tal:condition="row/details | nothing" 
                              i18n:translate="">
                              Details
                          </a>
                          <pre tal:condition="row/details | nothing" 
                              class="details" 
                              style="display: none"
                              tal:content="row/details" />
                  </tr>
              </tbody>
          </table>

          <script type="text/javascript">
              $(document).ready(function() {
                  $('.action').click(function() {
                          $(this).siblings('pre').fadeToggle('fast');
                  });
              });
          </script>

      </tal:def>
  </metal:content-core>
</metal:main>

</body>
</html>

